<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisplayAlteraPlan" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+AlteraPlan/textView1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_txtTrecho" />

                    <TextView
                        android:id="@+AlteraPlan/txtTrecho"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="0.3" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+AlteraPlan/textView2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_txtVeloc" />

                    <EditText
                        android:id="@+AlteraPlan/txtVeloc"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"
                        android:ems="10"
                        android:inputType="numberDecimal" >

                        <requestFocus />
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+AlteraPlan/textView3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_txtDistancia" />

                    <EditText
                        android:id="@+AlteraPlan/txtDist"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+AlteraPlan/textView4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_txtNeutro" />

                    <EditText
                        android:id="@+AlteraPlan/txtNeutro"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                </TableRow>
				<TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+AlteraPlan/lblInsereApos"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_txtInsereApos" />

                    <EditText
                        android:id="@+AlteraPlan/txtInsere"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                </TableRow>
					
            </TableLayout>

			<TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
				<TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
				
		            <Button
		                android:id="@+AlteraPlan/BtnAltera"
		                style="?android:attr/buttonStyleSmall"
		                android:layout_width="wrap_content"
		                android:layout_height="30dp"
		                android:layout_marginTop="3dp"
		                android:text="@string/lbl_btnAtualiza"
		                android:textSize="12sp" />
					
					<Button
		                android:id="@+AlteraPlan/BtnApagaRef"
		                style="?android:attr/buttonStyleSmall"
		                android:layout_width="wrap_content"
		                android:layout_height="30dp"
		                android:layout_marginTop="3dp"
		                android:text="@string/lbl_btnApaga"
		                android:textSize="12sp" />
				</TableRow>

				<TableRow
				    android:id="@+id/tableRow7"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" >

					<TextView
					    android:id="@+id/textView1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="@string/lbl_txtInsereTrecho"
						android:layout_span="2" />

				</TableRow>
				
				<TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
			
			<Button
                android:id="@+AlteraPlan/BtnInsereMetragem"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:text="@string/lbl_btnInsereMetragem"
                android:textSize="12sp" />
			
			<Button
                android:id="@+AlteraPlan/BtnInsereNeutro"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:text="@string/lbl_btnInsereNeutro"
                android:textSize="12sp" />
				</TableRow>
				
				<TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
					
					<CheckBox
						android:id="@+AlteraPlan/CheckBox01"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:checked="false"
						android:text="@string/lbl_chkNovoTrecho"
						android:textSize="12sp"
						android:layout_span="2"/>
					
				</TableRow>
				
				<TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
			
					<Button
		                android:id="@+AlteraPlan/BtnConfirma"
		                style="?android:attr/buttonStyleSmall"
		                android:layout_width="wrap_content"
		                android:layout_height="30dp"
		                android:layout_marginTop="3dp"
		                android:text="@string/lbl_btnConfirma"
		                android:textSize="12sp" />
					
					<Button
		                android:id="@+AlteraPlan/BtnCancela"
		                style="?android:attr/buttonStyleSmall"
		                android:layout_width="wrap_content"
		                android:layout_height="30dp"
		                android:layout_marginTop="3dp"
		                android:text="@string/lbl_btnCancela"
		                android:textSize="12sp" />
				</TableRow>
			</TableLayout>
			
        </LinearLayout>
		
		<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

				<TextView
				    android:id="@+AlteraPlan/TextView04"
				    android:layout_width="50dp"
				    android:layout_height="wrap_content"
				    android:text="@string/lbl_txtRefNum"
				    android:textAlignment="center" />

				<TextView
				    android:id="@+AlteraPlan/TextView03"
				    android:layout_width="40dp"
				    android:layout_height="wrap_content"
				    android:text="@string/lbl_txtTr"
				    android:textAlignment="center" />

				<TextView
				    android:id="@+AlteraPlan/TextView02"
				    android:layout_width="50dp"
				    android:layout_height="wrap_content"
				    android:text="@string/lbl_txtVel"
				    android:textAlignment="center" />

				<TextView
				    android:id="@+AlteraPlan/TextView01"
				    android:layout_width="50dp"
				    android:layout_height="wrap_content"
				    android:text="@string/lbl_txtDist"
				    android:textAlignment="center" />

				<TextView
				    android:id="@+AlteraPlan/textView4"
				    android:layout_width="50dp"
				    android:layout_height="wrap_content"
				    android:text="@string/lbl_txtNeut"
				    android:textAlignment="center" />

			</LinearLayout>

			<ListView
			    android:id="@+AlteraPlan/listView1"
			    android:layout_width="wrap_content"
			    android:layout_height="0dip"
			    android:layout_weight="1" >
			</ListView>

		</LinearLayout>
    </LinearLayout>

</LinearLayout>
